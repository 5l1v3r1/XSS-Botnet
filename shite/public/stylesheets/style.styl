drop-shadow()
  box-shadow 0px 2px 10px #CCC;

.jumbotron
  text-align center
  margin 100px 0

  h1
    font-size 60px
    margin 50px 0

.info-row
  text-align center

  p
    font-size 20px

  img
    padding 20px
    height 200px

size = 200px

ul.fotos

  margin 0
  padding 0
  list-style-type none
  text-align center

  a
    display block
    padding 10px

    &:hover
      text-decoration none !important

  li
    display inline-block

    cursor pointer

    border-radius 10px
    background-clip padding

    transition: background-color 0.5s

    &:hover
      background-color #EEE

    div.img
      width size
      height size
      background-position center center
      background-size cover
      background-repeat no-repeat
      drop-shadow

    p
      margin 0

form
  text-align center
  margin 50px 0

  .input-append
    margin 0

.img-container
  text-align center

  img
    max-height 400px
    drop-shadow

ul.talks

  list-style-type none
  margin 0
  padding 0

  li
    border-bottom 1px solid #EEE


    p
      margin 20px
      word-wrap break-word
      &:before
        content: "Person say:"
        margin-right 20px
        color #AAA
        font-weight bold
      &:after
        content ""
        display block
        clear both

      img
        width 250px
        float right
        drop-shadow